@model Egzamin2023.Models.NoteViewModel

@{
    ViewData["Title"] = "Dodaj notatkę";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="create" method="post">
    <div>
        <label asp-for="Title">Tytuł</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Content">Treść</label>
        <textarea asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DeadLine">Data ważności</label>
        <input asp-for="DeadLine" />
        <span asp-validation-for="DeadLine" class="date-danger"></span>
    </div>
    <button type="submit">Dodaj</button>
</form>
